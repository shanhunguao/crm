<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ykhd.office.repository.HolidayMapper">



    <!--获取时间段内的节假日-->
    <select id="getHolidayByMonth" resultType="java.lang.Integer">
		SELECT DATE_FORMAT(holiday,'%d')+0 FROM `bms_holiday` WHERE holiday BETWEEN #{start} AND #{end};
	</select>
</mapper>